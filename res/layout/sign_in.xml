<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign in To Continue"
            android:layout_gravity="center" android:capitalize="characters" android:textColor="#75d4c9"
            android:textSize="50dp" android:textStyle="bold" android:typeface="normal" android:autoText="false"
            android:fontFamily="sans-serif" android:shadowColor="#438078" android:textAlignment="center"
            android:gravity="center_horizontal"/>

    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center"/>

</LinearLayout>